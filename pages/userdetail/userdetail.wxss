/* pages/userdetail/userdetail.wxss */

.header-container {
  display: flex;
  height: 264rpx;
  /* border-radius: 0px 0px 10px 10px; */
  background-color: #fff;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  background-image: url(data:img/jpg;base64,);
  align-items: center;
  position: relative;
}

.header-bg{
  width: 100%;
  height: 100%;
}

.header-avatar {
  background-color: #fff;
  width: 114rpx;
  height: 114rpx;
  border-radius: 50%;
  overflow: hidden;
}

.header-nickname {
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
}

/* 名称和头像 */
.userContent{
  position: absolute;
  z-index: 1;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 34rpx 0 0 42rpx;
}

.userContent .txt text { 
  display: block;
  padding-left: 40rpx;
}

.in-title{
  font-size: 30rpx;
  font-family: "微软雅黑";
  color:#606060;
  line-height: 60rpx;
  padding-left:20rpx;
  border-left: 10rpx solid #4ec4c8;
  border-bottom: 1rpx solid #eeeeee;
}
.in-info{
  font-size: 25rpx;
  font-family: "微软雅黑";
  color:#606060;
  line-height: 60rpx;
  padding:16rpx;
  display: flex;
}
.clear{
  display: flex;
  flex-direction: column;
  height:16rpx;
  background: #eeeeee;
}

.nick {
  font-size: 28rpx;
  font-family: "微软雅黑";
  color:#606060;
  line-height: 60rpx;
  width: 50%;
  border-bottom: 1rpx solid #eeeeee;
}
.txxt {
  font-size: 28rpx;
  color:#606060;
  width: 50%;
  text-align: right;
  padding-right: 10rpx;
  border-bottom: 1rpx solid #eeeeee;
}